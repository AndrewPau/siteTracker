{
    "manifest_version" : 2,

    "name" : "Site Tracker",
    "description" : "This extension tracks the time spent on webpages.",
    "version" : "1.0",

    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },
    "background" : {
        "scripts": ["background.js"]
    },
    "permissions" : [
        "tabs",
        "storage"
    ]
}
